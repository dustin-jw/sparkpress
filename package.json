{
  "name": "sparkpress-block",
  "version": "1.0.0",
  "description": "Starter template for developing WordPress themes and plugins.",
  "main": "index.js",
  "author": "Sparkbox",
  "license": "ISC",
  "engines": {
    "node": ">=20",
    "npm": ">=10"
  },
  "type": "module",
  "browserslist": [
    ">0.5%",
    "last 10 versions",
    "Firefox ESR"
  ],
  "scripts": {
    "backup:db": "BACKUP=true ./scripts/export-db.sh",
    "backup:uploads": "BACKUP=true ./scripts/export-uploads.sh",
    "backup": "run-s \"backup:* {1}\" --",
    "build": "run-s sass:build js:build plugins:build copy",
    "clean": "rm -rf dist",
    "copy:plugins": "mkdir -p ./dist/plugins && cp -r ./src/plugins/ ./dist/plugins",
    "copy:themes": "mkdir -p ./dist/themes && cp -r ./src/themes/ ./dist/themes",
    "copy": "run-p copy:*",
    "export:db": "./scripts/export-db.sh",
    "export:uploads": "./scripts/export-uploads.sh",
    "export": "run-s \"export:* {1}\" --",
    "generate:block-theme": "node ./generators/block-theme.js",
    "import:db": "./scripts/import-db.sh",
    "import:uploads": "./scripts/import-uploads.sh",
    "import": "run-s import:*",
    "js:build": "node esbuild.mjs",
    "js:dev": "NODE_ENV=development node esbuild.mjs",
    "lint:js": "eslint src --no-error-on-unmatched-pattern",
    "lint:php": "./scripts/run.sh vendor/bin/phpcs --standard=phpcs-rules-standard.xml --extensions=php src -s -n",
    "lint:scss": "stylelint \"src/**/*.scss\" --color --formatter verbose --allow-empty-input",
    "lint:twig": "./scripts/run.sh vendor/bin/twigcs src",
    "lint": "run-s lint:*",
    "map-vendor-files": "mkdir -p vendor && docker compose cp web:/var/www/html/vendor .",
    "node-version": "check-node-version --package",
    "php:run": "./scripts/run.sh",
    "plugins:build": "run-s plugins:build:* || echo \"Unable to build plugins\"",
    "plugins:dev": "run-p plugins:dev:* || echo \"Unable to build plugins\"",
    "prebuild": "run-s node-version clean",
    "preimport:db": "npm run backup:db",
    "preimport:uploads": "npm run backup:uploads",
    "prestart": "run-s node-version clean copy",
    "sass:build": "sass --no-source-map --style=compressed src/scss:dist",
    "sass:dev": "sass --watch --embed-source-map src/scss:dist",
    "serve:dev": "docker compose up || docker compose down",
    "start": "run-p serve:dev sass:dev js:dev plugins:dev watch",
    "test:ci": "vitest --run --coverage --pass-with-no-tests",
    "test:watch": "vitest --pass-with-no-tests",
    "test": "vitest --run --pass-with-no-tests",
    "watch:plugins": "chokidar \"src/plugins/**/*\" -c \"npm run copy:plugins\"",
    "watch:themes": "chokidar \"src/themes/**/*\" -c \"npm run copy:themes\"",
    "watch": "run-p watch:*"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^1.3.1",
    "@wordpress/eslint-plugin": "^17.9.0",
    "@wordpress/scripts": "^27.3.0",
    "check-node-version": "^4.2.1",
    "chokidar-cli": "^3.0.0",
    "dotenv": "^16.4.5",
    "esbuild": "^0.20.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "js-yaml": "^4.1.0",
    "npm-run-all": "^4.1.5",
    "prompts": "^2.4.2",
    "sass": "^1.71.1",
    "stylelint": "^16.2.0",
    "stylelint-config-standard": "^36.0.0",
    "stylelint-config-standard-scss": "^13.0.0",
    "vitest": "^1.2.2"
  }
}
